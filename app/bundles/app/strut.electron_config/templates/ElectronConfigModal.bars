<div class="modal-header">
	<button class="close" data-dismiss="modal">×</button>
	<h3 class="title">{{title}}</h3>
</div>
<div class="modal-body">
	<div class="container-fluid">
		<div class="row-fluid display-flex">
			<div class="span2">
				<!--Sidebar content-->
				<nav class="sidebarMenuList">
					<ul class="nav nav-list">
						<li><a href="#" data-setting="storage">{{storage}}</a></li>
						<li><a href="#" data-setting="monitor">{{monitor}}</a></li>
						<li><a href="#" data-setting="others">Others</a></li>
					</ul>
				</nav>
			</div>
			<div class="span10">
				<!--Body content-->
				<div class="container-fluid" data-name="sidebarDependentContent">
					<!--We Can Use Partial Template with a veriable name like this{{> (lookup . 'partialTemplateToShow') }}-->
					<!--OR We can jut replace the entire DIVs InnerHTML using js-->
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal-footer">
	<div class="alert">
		<button class="close">×</button>
	</div>
	<a href="#" class="btn btn-primary ok btn-inverse" data-button_name="save">{{save}}</a>
	<a href="#" class="btn btn-primary ok btn-inverse" data-button_name="cancel">{{cancel}}</a>
</div>